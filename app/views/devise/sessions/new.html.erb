<h2>登录</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: '邮箱', required: false, autofocus: true, error: '请输入你的邮箱' %>
    <%= f.input :password, label: '密码', required: false, error: '密码错误' %>
    <%= f.input :remember_me, inline_label: '记住我', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登录" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
